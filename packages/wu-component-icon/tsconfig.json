{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "lib": ["esnext", "dom"],
        // "outDir": "./tsc/test",
        // "types": ["vite/client"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "./css.d.ts"],
    "exclude": ["./node_modules"]
}
